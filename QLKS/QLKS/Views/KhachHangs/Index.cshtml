@model IEnumerable<QLKS.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    string gtinh = "";
    int i = 0;
    Layout = "~/Views/Shared/_Layout_63132835.cshtml";
    var grid = new WebGrid
(
    Model,
    canPage: true,
    defaultSort: "MaKH",
    rowsPerPage: 5
);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}

<head>
    <style>
        .input-width {
            width: 280px;
        }

        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin: 0;
            width: 800px;
        }

        th {
            text-align: center;
        }

            th a,
            th a:hover {
                text-decoration: none;
            }

        .table-grid {
            & td

        {
            text-align: center;
        }

        & td:nth-child(3),
        & td:nth-child(8) {
            text-align: left;
        }
        }
    </style>
</head>


<div id="gridContent">
    @ViewBag.TB
    @grid.GetHtml(
        tableStyle: "table table-bordered table-hover table-grid",
        footerStyle: "grid-footer",
        fillEmptyRows: true,
        mode: WebGridPagerModes.Numeric,
        alternatingRowStyle: "alternatingRowStyle",
        columns: new[]
        {
            grid.Column("STT", format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
            grid.Column("MaKH", "Mã Khách hàng"),
            grid.Column("HoKH", "Họ Khách hàng"),
            grid.Column("TenKH", "Tên Khách hàng"),
            grid.Column("GioiTinh", "Giới tính", format: (@item) => @item.GioiTinh==true? "Nam" : "Nữ"),
            grid.Column("NgaySinh", "Ngày sinh", format:@<text> @item.NgaySinh.ToString("dd/MM/yyyy")</text>),
grid.Column("DiaChi", "Địa chỉ"),
grid.Column("LoaiKhachHang.TenLoaiKhachHang", "Loại khách hàng"),
grid.Column(
"Chức năng",
format:
            @<text>
                <a href="@Url.Action("Edit", new { id = item.MaKH})" class="edit-btn text-decoration-none"><abbr title="Cập nhật dữ liệu"><img /></abbr>Sửa |</a>
                <a href="@Url.Action("Details", new { id = item.MaKH})" class="edit-btn text-decoration-none"><abbr title="Xem chi tiết"><img /></abbr>Chi tiết |</a>
                <a href="@Url.Action("Delete", new { id = item.MaKH})" class="edit-btn text-decoration-none"><abbr title="Xóa dữ liệu"><img /></abbr>Xóa</a>
            </text>
     ),
     }
)
</div>