@model FormThongTinNhanVien.Models.NHANVIEN

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm nhân viên mới</h2>


